---
layout: layouts/base.njk
---
<section class="lg-container">
	{%- if collections.posts %}
	{%- set previousPost = collections.posts | getPreviousCollectionItem %}
	{%- set nextPost = collections.posts | getNextCollectionItem %}
	{%- if nextPost or previousPost %}
	<ul class="links-nextprev">
		{%- if previousPost %}<li><a href="{{ previousPost.url }}" aria-describedby="Previous post">{{ previousPost.data.title }}</a></li>{% endif %}{%- if nextPost %} / <li><a href="{{ nextPost.url }}" aria-describedby="Next post">{{ nextPost.data.title }}</a></li>{% endif %}
	</ul>
	{%- endif %}
	{%- endif %}
</section>
<section class="lg-container">
	<aside>
		<header class="post-header">
			<h1>{{ title }}</h1>
			<ul class="post-metadata">
				{%- for tag in tags | filterTagList %}
				{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
				<li class="sm-link">tagged <a href="{{ tagUrl }}">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
				{%- endfor %}
				<li class="sm-link"><time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></li>
			</ul>
		</header>
		{% if thumb %}
			 <img src="{{ thumb }}" alt="{{ thumbAlt }}" class="article-img">
		{% endif %}
	</aside>
	{# Only include the syntax highlighter CSS on blog posts #}
	{%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %}
	{%- css %}{% include "public/css/base/prism-diff.css" %}{%- endcss %}
	<article class="wrapper">
			<div class="textblock">
				<h2>{{ description }}</h2>
				<hr>
				{{ content | safe }}
			</div>
	</article>
</section>
